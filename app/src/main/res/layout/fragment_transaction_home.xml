<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.Transaction.TransactionHomeFragment"
    android:background="@color/white_grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/btnWithdrawRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:text="Withdraw"
                    android:padding="16dp"
                    android:textAlignment="center"
                    android:layout_margin="4dp"
                    android:elevation="2.5dp"
                    android:background="@drawable/main_btn"
                    />

                <TextView
                    android:id="@+id/btnFundRecharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="16dp"
                    android:text="Fund Recharge"
                    android:padding="16dp"
                    android:textAlignment="center"
                    android:layout_margin="4dp"
                    android:elevation="2.5dp"
                    android:background="@drawable/main_btn_reverse"
                    />

                <TextView
                    android:id="@+id/btnMobileRecharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="16dp"
                    android:text="Mobile Recharge"
                    android:padding="16dp"
                    android:textAlignment="center"
                    android:layout_margin="4dp"
                    android:elevation="2.5dp"
                    android:background="@drawable/main_btn"
                    />

                <TextView
                    android:id="@+id/btnBalanceTransfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="16dp"
                    android:text="Balance Transfer"
                    android:padding="16dp"
                    android:textAlignment="center"
                    android:layout_margin="4dp"
                    android:elevation="2.5dp"
                    android:background="@drawable/main_btn_reverse"
                    />

                <TextView
                    android:id="@+id/btnWithdrawStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:text="Transaction History"
                    android:padding="16dp"
                    android:textAlignment="center"
                    android:layout_margin="4dp"
                    android:elevation="2.5dp"
                    android:background="@drawable/main_btn"
                    />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>